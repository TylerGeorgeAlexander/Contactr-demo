<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contactr - Log In</title>
    <link
      rel="icon"
      href="/assets/Contactr-logos/coffeechat-icon.png?raw=true"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-light">
    <form class="container mt-5" action="/login" method="POST">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <img
            class="w-100 mb-4"
            src="/assets/Contactr-logos/Contactr-logos_transparent.png?raw=true"
            alt="Contactr Logo"
          />
          <h1 class="h3 mb-4 fw-bold text-center">Log In</h1>

          <!-- Error messages -->
          <% if (locals.messages.errors) { %> <% messages.errors.forEach( el =>
          { %>
          <div class="alert alert-danger" role="alert"><%= el.msg %></div>
          <% }) %> <% } %>

          <label for="inputEmail" class="form-label">Email address / ID</label>
          <input
            type="email"
            name="email"
            id="inputEmail"
            class="form-control"
            placeholder="Enter your email / ID"
            required=""
            autofocus=""
          />

          <label for="inputPassword" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="inputPassword"
            class="form-control"
            placeholder="Enter your password"
            required=""
          />

          <div class="text-center">
            <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">
              Log In
            </button>
            <a
              class="btn btn-lg btn-success btn-block mt-4"
              href="/signup"
              role="button"
              >Sign Up</a
            >
          </div>

          <p class="mt-4 text-muted text-center">&copy; 2022</p>
        </div>
      </div>
    </form>

    <!-- Demo Form -->
    <hr class="w-50 mx-auto" />
    <form class="container mt-3 text-center" action="/login" method="POST">
      <input
        type="hidden"
        name="email"
        id="inputEmailDemo"
        class="form-control"
        placeholder="Email / ID"
        required=""
        autofocus=""
        value="admin@admin.com"
      />
      <input
        type="hidden"
        name="password"
        id="inputPasswordDemo"
        class="form-control"
        placeholder="Password"
        required=""
        value="admin1234"
      />

      <button class="btn btn-lg btn-secondary btn-block mt-2" type="submit">
        Demo Log In
      </button>
      <a
        class="btn btn-lg btn-secondary btn-block mt-2"
        href="/auth/google"
        role="button"
        >Log In with Google</a
      >
    </form>

    <!-- Bootstrap JS (optional) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
